<div class="form-group">
  <label for="bonus">{{localize "ENHANCEDBONUSBUILDER.Fields.bonus"}}</label>
  <div class="form-fields">
    <input type="text" name="bonus" value="{{bonus.bonus}}" required>
  </div>
  <p class="hint">{{localize "Formula that determines the bonus value. Can include @actor, @item, and other roll data references."}}</p>
</div>

{{#if (eq bonus.type "damageRoll")}}
<div class="form-group">
  <label for="damageType">{{localize "ENHANCEDBONUSBUILDER.Fields.damageType"}}</label>
  <div class="form-fields">
    <select name="damageType">
      <option value="">{{localize "None"}}</option>
      {{selectOptions damageTypes selected=bonus.damageType localize=true}}
    </select>
  </div>
  <p class="hint">{{localize "The type of damage this bonus deals."}}</p>
</div>

<div class="form-group">
  <label class="checkbox">
    <input type="checkbox" name="critical" {{checked bonus.critical}}>
    {{localize "ENHANCEDBONUSBUILDER.Fields.critical"}}
  </label>
  <p class="hint">{{localize "Whether this bonus is applied on critical hits."}}</p>
</div>
{{/if}}

{{#if (eq bonus.type "savingThrow")}}
<div class="form-group">
  <label for="ability">{{localize "ENHANCEDBONUSBUILDER.Filters.abilities"}}</label>
  <div class="form-fields">
    {{#each abilities as |name key|}}
    <label class="checkbox">
      <input type="checkbox" name="ability" value="{{key}}" {{checked (includes ../bonus.ability key)}}>
      {{localize name}}
    </label>
    {{/each}}
  </div>
  <p class="hint">{{localize "The abilities this bonus applies to. If none are selected, it applies to all abilities."}}</p>
</div>
{{/if}}

{{#if (eq bonus.type "abilityCheck")}}
<div class="form-group">
  <label for="ability">{{localize "ENHANCEDBONUSBUILDER.Filters.abilities"}}</label>
  <div class="form-fields">
    {{#each abilities as |name key|}}
    <label class="checkbox">
      <input type="checkbox" name="ability" value="{{key}}" {{checked (includes ../bonus.ability key)}}>
      {{localize name}}
    </label>
    {{/each}}
  </div>
  <p class="hint">{{localize "The abilities this bonus applies to. If none are selected, it applies to all abilities."}}</p>
</div>

<div class="form-group">
  <label for="skill">{{localize "ENHANCEDBONUSBUILDER.Filters.skills"}}</label>
  <div class="form-fields">
    {{#each skills as |name key|}}
    <label class="checkbox">
      <input type="checkbox" name="skill" value="{{key}}" {{checked (includes ../bonus.skill key)}}>
      {{localize name}}
    </label>
    {{/each}}
  </div>
  <p class="hint">{{localize "The skills this bonus applies to. If none are selected, it applies to all skills."}}</p>
</div>
{{/if}}